<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent">

 <ImageView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="5dp"
     android:background="@mipmap/ic_launcher_round"
     android:id="@+id/imageViewAlbumCover"
     android:layout_below="@+id/textViewSongName"
     android:layout_alignParentLeft="true"
     android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:text="Artist Name"
        android:textSize="18dp"
        android:layout_marginLeft="3.5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:id="@+id/textViewArtistName"
        android:layout_alignBottom="@+id/imageViewAlbumCover"
        android:layout_toRightOf="@+id/imageViewAlbumCover"
        android:layout_toEndOf="@+id/imageViewAlbumCover" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Song Name"
        android:textColor="#000000"
        android:layout_marginLeft="3.5dp"
        android:textSize="24dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSongName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewAlbumName"
        android:layout_width="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="3.5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:text="Album Name"
        android:layout_alignTop="@+id/imageViewAlbumCover"
        android:layout_toRightOf="@+id/imageViewAlbumCover"
        android:layout_toEndOf="@+id/imageViewAlbumCover" />


</RelativeLayout>